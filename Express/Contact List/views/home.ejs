<html>
    <head>
        <title>
            <%= title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
      <h1 id="page-heading">
        <i class="fa-solid fa-address-card"></i>
        <%=heading%>
      </h1>

      <ul>
        <% for(i of contact_list){%>
            <li>
                <p><%=i.name%></p>
                <p><%= i.phone %> </p>
                <a href="/delete-contact/?phone=<%= i.phone %> ">
                    <i class="fa-sharp fa-solid fa-trash" id="delete-button"></i>
                </a>
            </li>
           
        <%}%>
      </ul>


        <form action="/create-contact" method="post">
            <input type="text" name="name" required placeholder="Enter the name">
            <input type="text" name="phone" required placeholder="Enter the phone">
            <input type="submit" value="Add">

        </form>
        <script src="https://kit.fontawesome.com/cab6a3a90b.js" crossorigin="anonymous"></script>
        <script src="/js/home.js"></script>
    </body>
</html>